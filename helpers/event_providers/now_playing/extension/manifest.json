{
  "manifest_version": 3,
  "name": "SketchyBar Now Playing Bridge",
  "version": "0.1.0",
  "description": "Forwards YouTube Music Media Session metadata to the native host.",
  "permissions": ["nativeMessaging", "scripting", "tabs"],
  "host_permissions": [
    "https://music.youtube.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://music.youtube.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}


